<!-- Week 4, Individual Activity -->

<!-- Display the Content Heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- Display Messages -->
<% message %>

<!-- Display Error Message -->
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<!-- Display the Content Body -->
<form action="/inv/add-inventory" method="post">
  <div class="form">
    <fieldset>
      <legend>All FIELDS ARE REQUIRED.</legend>
      <div>
        <label for="classification_id">Classification</label>
        <%- options %>
      </div>
      <div>
        <label for="inv_make">Make</label>
        <input type="text" name="inv_make" id="inv_make" placeholder="Min of 3 characters" required value="<%= locals.inv_make %>">
      </div>
      <div>
        <label for="inv_model">Model</label>
        <input type="text" name="inv_model" id="inv_model" placeholder="Min of 3 characters" required value="<%= locals.inv_model %>">
      </div>
      <div>
        <label for="inv_description">Description</label> 
      </div>
     <div>
        <textarea name="inv_description" id="inv_description" cols="30" rows="5" required><%= locals.inv_description %></textarea>
      </div>
      <div>
        <label for="inv_image">Image Path</label>
        <input type="text" name="inv_image" id="inv_image" placeholder="/images/vehicles/no-image.png" required value="<%= locals.inv_image %>">
      </div>
      <div>
        <label for="inv_thumbnail">Thumbnail Path</label>
        <input type="text" name="inv_thumbnail" id="inv_thumbnail" placeholder="/images/vehicles/no-image-tn.png"  required value="<%= locals.inv_thumbnail %>">
      </div>
      <div>
        <label for="inv_price">Price</label>
        <input type="text" name="inv_price" id="inv_price" placeholder="Decimal or integer" pattern="^([0-9\.]*$)"  required value="<%= locals.inv_price %>">
      </div>
      <div>
        <label for="inv_year">Year</label>
        <input type="text" name="inv_year" id="inv_year" placeholder="4-digit year" pattern="[0-9]{4}" required value="<%= locals.inv_year %>">
      </div>
      <div>
        <label for="inv_miles">Miles</label>
        <input type="text" name="inv_miles" id="inv_miles" placeholder="Digits only" pattern="[0-9]+"  required value="<%= locals.inv_miles %>">
      </div>
      <div>
        <label for="inv_color">Color</label>
        <input type="text" name="inv_color" id="inv_color" required value="<%= locals.inv_color %>">
      </div>
      <div>
        <input type="submit" class="submit" name="submit" id="submit" value="Add Vehicle">
      </div>
    </fieldset>
  </div>
</form>
